{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="container">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <form action="{{ path('app_login') }}" method="post">
            <label for="username">Username:</label>
            <input class="form-control mb-3" type="text" id="username" name="_username" value="{{ last_username }}">
            <label for="password">Password:</label>
            <input class="form-control mb-3" type="password" id="password" name="_password">
            <input type="hidden" name="_target_path" value="/profile">
            <button class="btn btn-primary py-3 px-5 mt-2" type="submit">Login</button>
        </form>
    </div>
{% endblock %}
